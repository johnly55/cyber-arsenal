@model Build
@{ 
    string upsert = "Create";
}
<div class="p-4 bg-dark col-6" style="margin: auto auto">
    <div>
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            @if (Model.Id != 0)
            {
                <input asp-for="Id" type="hidden" />
                upsert = "Edit";
                ViewData["Title"] = upsert;
            }
            <div class="form-group">
                <input class="form-control" asp-for="@Model.ApplicationUserId" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Name"></label>
                <input class="form-control" asp-for="@Model.Name" type="text" />
                <span class="text-danger" asp-validation-for="@Model.Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.CpuName"></label>
                <input class="form-control" asp-for="@Model.CpuName" type="text" />
                <span class="text-danger" asp-validation-for="@Model.CpuName"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.GpuName"></label>
                <input class="form-control" asp-for="@Model.GpuName" type="text" />
                <span class="text-danger" asp-validation-for="@Model.GpuName"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.RamName"></label>
                <input class="form-control" asp-for="@Model.RamName" type="text" />
                <span class="text-danger" asp-validation-for="@Model.RamName"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.StorageName"></label>
                <input class="form-control" asp-for="@Model.StorageName" type="text" />
                <span class="text-danger" asp-validation-for="@Model.StorageName"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.StorageSecondary"></label>
                <input class="form-control" asp-for="@Model.StorageSecondary" type="text" />
                <span class="text-danger" asp-validation-for="@Model.StorageSecondary"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.MotherBoard"></label>
                <input class="form-control" asp-for="@Model.MotherBoard" type="text" />
                <span class="text-danger" asp-validation-for="@Model.MotherBoard"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PowerSupply"></label>
                <input class="form-control" asp-for="@Model.PowerSupply" type="text" />
                <span class="text-danger" asp-validation-for="@Model.PowerSupply"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Case"></label>
                <input class="form-control" asp-for="@Model.Case" type="text" />
                <span class="text-danger" asp-validation-for="@Model.Case"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Description"></label>
                <textarea class="form-control" asp-for="@Model.Description"></textarea>
                <span class="text-danger" asp-validation-for="@Model.Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Private"></label>
                <input class="" asp-for="@Model.Private" type="checkbox" />
                <span class="text-danger" asp-validation-for="@Model.Private"></span>
            </div>
            <div class="form-group row">
                <partial name="_BackButtonPartial" />
                <button class="btn btn-primary" style="width:90px" type="submit">@upsert</button>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
