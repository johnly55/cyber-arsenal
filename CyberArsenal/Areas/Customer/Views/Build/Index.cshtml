@model IEnumerable<Build>
@{ 
    ViewData["Title"] = "My Builds";
}
<div>
    <a class="btn btn-primary mt-1 mb-4" asp-action="Upsert"><i class="fas fa-plus-square"> Create Build</i></a>
</div>
<div>
    <table class="table table-striped col-12" style="border:1px solid black">
        <thead class="bg-primary">
            <tr>
                <th class="col-2">
                    <label asp-for="@Model.FirstOrDefault().Name"></label>
                </th>
                <th class="col-2">
                    <label asp-for="@Model.FirstOrDefault().Cpu"></label>
                </th>
                <th class="col-2">
                    <label asp-for="@Model.FirstOrDefault().Gpu"></label>
                </th>
                <th class="col-2">
                    <label asp-for="@Model.FirstOrDefault().Ram"></label>
                </th>
                <th class="col-2">
                    <label asp-for="@Model.FirstOrDefault().Storage"></label>
                <th class="col-2"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var build in Model)
                {
                    <tr>
                        <td>
                            <a class="btn btn-outline-primary" style="border-radius:5px; ">
                            <i class="fas fa-info-circle"> @build.Name</i>
                            </a>
                        </td>
                        <td>
                            @build.Cpu
                        </td>
                        <td>
                            @build.Gpu
                        </td>
                        <td>
                            @build.Ram
                        </td>
                        <td>
                            @build.Storage
                        </td>
                        <td>
                            <partial name="_EditAndDeletePartial" model="build.Id" />
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="12"><strong>You currently have no builds</strong></td>
                </tr>
            }
        </tbody>
    </table>
</div>