@model Build
@{
    ViewData["Title"] = "My Builds";
}
<div style="margin:20px 30px;">
    <a style="float:left" class="btn btn-primary mt-1 mb-4" asp-action="Upsert"><i class="fas fa-plus-square"> Create a Build</i></a>
    <h1 style="text-align:center">Build List</h1>
    <div class="my-bg-dark">
        <table id="myTable" class="table table-striped col-12">
            <thead class="bg-primary">
                <tr>
                    <th class="all">
                        <label asp-for="@Model.Name"></label>
                    </th>
                    <th class="desktop">
                        <label asp-for="@Model.CpuName"></label>
                    </th>
                    <th class="desktop">
                        <label asp-for="@Model.GpuName"></label>
                    </th>
                    <th class="desktop">
                        <label asp-for="@Model.RamName"></label>
                    </th>
                    <th class="desktop">
                        <label asp-for="@Model.StorageName"></label>
                    </th>
                    <th class="none">
                        <label asp-for="@Model.StorageSecondary"></label>
                    </th>
                    <th class="none">
                        <label asp-for="@Model.MotherBoard"></label>
                    </th>
                    <th class="none">
                        <label asp-for="@Model.PowerSupply"></label>
                    </th>
                    <th class="none">
                        <label asp-for="@Model.Case"></label>
                    </th>
                    <th class="none"></th>
                </tr>
            </thead>
            <tbody>
                
            </tbody>
        </table>
    </div>
</div>

@section Scripts
{
    <script src="~/js/build.js"></script>
}
