@model IEnumerable<Build>
@{
    ViewData["Title"] = "My Builds";
}
<div style="margin:20px 30px">
    <a style="float:left" class="btn btn-primary mt-1 mb-4" asp-action="Upsert"><i class="fas fa-plus-square"> Create a Build</i></a>
    <h1 style="text-align:center">Build List</h1>
    <div class="my-bg-dark">
        <table id="myTable" class="table table-striped col-12">
            <thead class="bg-primary">
                <tr>
                    <th class="all">
                        <label asp-for="@Model.FirstOrDefault().Name"></label>
                    </th>
                    <th class="desktop">
                        <label asp-for="@Model.FirstOrDefault().Cpu"></label>
                    </th>
                    <th class="desktop">
                        <label asp-for="@Model.FirstOrDefault().Gpu"></label>
                    </th>
                    <th class="desktop">
                        <label asp-for="@Model.FirstOrDefault().Ram"></label>
                    </th>
                    <th class="desktop">
                        <label asp-for="@Model.FirstOrDefault().Storage"></label>
                    </th>
                    <th class="none">
                        <label asp-for="@Model.FirstOrDefault().StorageSecondary"></label>
                    </th>
                    <th class="none">
                        <label asp-for="@Model.FirstOrDefault().MotherBoard"></label>
                    </th>
                    <th class="none">
                        <label asp-for="@Model.FirstOrDefault().PowerSupply"></label>
                    </th>
                    <th class="none">
                        <label asp-for="@Model.FirstOrDefault().Case"></label>
                    </th>
                    <th class="none">
                        <label asp-for="@Model.FirstOrDefault().Description"></label>
                    </th>
                    <th class="none"></th>
                </tr>
            </thead>
            <tbody>
                
            </tbody>
        </table>
    </div>
</div>

@section Scripts
{
    <script src="~/js/build.js"></script>
}
